<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <EditText
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:hint="UsuÃ¡rio"
        android:ems="10"
        android:inputType="textEmailAddress">
		
		<requestFocus />
    </EditText>
    
    
    <EditText
        android:id="@+id/textSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textEmail"
        android:layout_alignRight="@+id/textEmail"
        android:layout_below="@+id/textEmail"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword" />

        

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textSenha"
        android:layout_alignRight="@+id/textSenha"
        android:layout_below="@+id/textSenha"
        android:layout_marginTop="30dp"
        android:minWidth="89dip"
        android:text="Entrar / Cadastrar" />

</RelativeLayout>
